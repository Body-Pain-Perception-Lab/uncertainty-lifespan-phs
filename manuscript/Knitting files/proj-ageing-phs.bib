	number = {1},
	urldate = {2022-01-17},
	journal = {Brain Research},
	author = {Hämäläinen, H. and Vartiainen, M. and Karvanen, L. and Järvilehto, T.},
	month = nov,
	year = {1982},
	keywords = {man, paradoxical sensation, thermoreception},
	pages = {77--81},
	file = {ScienceDirect Full Text PDF:/Users/au706616/Zotero/storage/S4Z5D7S3/Hämäläinen et al. - 1982 - Paradoxical heat sensations during moderate coolin.pdf:application/pdf;ScienceDirect Snapshot:/Users/au706616/Zotero/storage/5PYKG79G/0006899382912756.html:text/html},
