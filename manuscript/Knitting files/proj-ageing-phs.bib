	keywords = {Humans, Thermosensing, Adult, Female, Male, Young Adult, Anxiety, Hyperalgesia, Pain Threshold, Pain Measurement, Adolescent, Capsaicin, Surveys and Questionnaires, Statistics, Nonparametric, Sensory System Agents},
