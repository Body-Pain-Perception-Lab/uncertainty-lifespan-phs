	month = jan,
	year = {2020},
	keywords = {Biological, Humans, Illusion, Illusions, Models, Models, Biological, Nociception, Pain, Synthetic heat, TGI, Thermal grill, Thermosensation, Thermosensing},
	pages = {472--479},
	file = {Fardo et al. - 2020 - Beyond labeled lines A population coding account .pdf:/Users/au706616/Zotero/storage/5UKKIZE4/Fardo et al. - 2020 - Beyond labeled lines A population coding account .pdf:application/pdf;ScienceDirect Snapshot:/Users/au706616/Zotero/storage/PYNGWAAG/S014976341930702X.html:text/html},
