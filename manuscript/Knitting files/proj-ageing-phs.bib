	author = {Schaldemose, Ellen Lund and Raaschou-Nielsen, Line and Böhme, Rebecca Astrid and Finnerup, Nanna Brix and Fardo, Francesca},
	month = apr,
	year = {2023},
	keywords = {Pain, Paradoxical heat sensation, Thermal grill illusion, Thermal sensation},
