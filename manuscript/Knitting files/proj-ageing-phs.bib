@article{courtin_perceiving_nodate,
	title = {Perceiving less or perceiving unreliably? {Disentangling} thermosensory sensitivity and precision in the contexts of ageing and neuropathy},
	abstract = {Thermal perception relies not only on sensitivity but also on precision, yet the latter is often overlooked in clinical assessments. This study investigated how ageing and diabetic polyneuropathy (DPN) affect both sensitivity (threshold) and precision (slope) in thermal perception, and whether these parameters can aid in differentiating patients from healthy controls. Using a Bayesian hierarchical modelling approach, we estimated psychometric function thresholds and slopes for cold detection, warm detection, cold pain, and heat pain in 86 healthy adults (aged 20–80) and 34 patients with probable DPN. We assessed age- and neuropathy-related effects on these parameters and evaluated their utility in classifying patient status using simulated classification analyses. Ageing was associated with elevated thresholds in multiple thermal modalities and reduced precision specifically in cold detection. Patients with DPN showed higher detection thresholds and lower cold detection slopes, while pain-related parameters were largely unaffected. Classification based on cold and warm detection thresholds and slopes successfully discriminated patients from controls. However, pain-related parameters did not contribute meaningfully to classification. Residual correlations revealed xxx after accounting for age and neuropathy. These findings highlight the added value of assessing both sensitivity and precision in thermosensory testing. The assessment of precision may enhance the detection of early or subtle sensory dysfunction and improve diagnostic models for neuropathy and age-related decline.},
	author = {Courtin, Arthur S. and Krænge, Camilla E. and Mitchell, Alexandra G. and Fischer Ehmsen, Jesper and Brask-Thomsen, Peter K. and Gylfadottir, Sandra S. and Fardo, Francesca},
}
